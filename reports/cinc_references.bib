	journal = {JAMA Network Open},
	author = {Rhee, Chanu and Jones, Travis M. and Hamad, Yasir and Pande, Anupam and Varon, Jack and O’Brien, Cara and Anderson, Deverick J. and Warren, David K. and Dantes, Raymund B. and Epstein, Lauren and Klompas, Michael and {for the Centers for Disease Control and Prevention (CDC) Prevention Epicenters Program}},
	month = feb,
